source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '10.0'

target 'DNMOTD' do
	use_frameworks!
    pod 'Kanna', :git => 'https://github.com/tid-kijyun/Kanna', :branch => 'feature/v3.0.0'
	pod 'SwiftyJSON'
	pod 'SwiftyUserDefaults'
	pod 'ReachabilitySwift', '~> 3'
	pod 'HanekeSwift', :git => 'https://github.com/Haneke/HanekeSwift', :branch => 'feature/swift-3'

end

target 'DNMOTD-Widget' do
    use_frameworks!
    pod 'Kanna', :git => 'https://github.com/tid-kijyun/Kanna', :branch => 'feature/v3.0.0'
end
